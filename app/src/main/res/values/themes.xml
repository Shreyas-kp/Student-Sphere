    <!-- Define Theme -->
    <!-- Base application theme. -->
    <style name="Base.Theme.StudentPortal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color for both themes -->
        <item name="colorPrimary">@color/burnt_orange</item>
        <item name="colorPrimaryVariant">@color/sunset_orange</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_green</item>
        <item name="colorSecondaryVariant">@color/deep_teal</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/jet_black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
    </style>

    <!-- Light Theme Customizations -->
    <style name="Theme.StudentPortal.Light" parent="Base.Theme.StudentPortal">
        <!-- Light theme background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnPrimary">@color/pure_black</item>
        <item name="colorSurface">@color/white</item>

        <!-- Toolbar color -->
        <item name="colorPrimary">@color/burnt_orange</item>
        <item name="colorPrimaryVariant">@color/vivid_orange</item>

        <!-- Accent colors -->
        <item name="colorAccent">@color/bright_gold</item>

        <!-- Button background color for light mode -->
        <item name="colorButtonNormal">@color/burnt_orange</item>
    </style>

    <!-- Dark Theme Customizations -->
    <style name="Theme.StudentPortal.Dark" parent="Base.Theme.StudentPortal">
        <!-- Dark theme background colors -->
        <item name="android:colorBackground">@color/charcoal_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/dark_gray</item>

        <!-- Toolbar color -->
        <item name="colorPrimary">@color/deep_teal</item>
        <item name="colorPrimaryVariant">@color/forest_green</item>

        <!-- Accent colors -->
        <item name="colorAccent">@color/sunset_orange</item>

        <!-- Button background color for dark mode -->
        <item name="colorButtonNormal">@color/deep_teal</item>
    </style>
</resources>
